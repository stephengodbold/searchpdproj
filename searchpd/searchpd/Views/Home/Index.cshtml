@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    Enter some text, then click outside the input box.
</p>
<p>
    The system will show all categories that start with the entered text, or nothing if there are no such categories.
</p>
<div class="input-with-suggestions">
    <input type="text" class="search" id="search"/>
    
    @*Using a table instead of a div, so the suggestions box visually grows when you get long category lines*@
    <table border="0" cellpadding="0" cellspacing="0">
        <tr><td class="suggestions" id="suggestions">
        </td></tr>
    </table>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/search")





